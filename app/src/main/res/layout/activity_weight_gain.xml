<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad2"
    tools:context=".Goals.WeightGainActivity">
    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="254dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="86dp"
        android:fontFamily="sans-serif-medium"
        android:text="Programs"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/roundbox"
        app:srcCompat="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/weightGainDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_layout"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Weight Gain Description"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weightGainDescription"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_below="@id/weightGainDescriptionTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/weight_loss_description"
        android:textColor="@color/yellow"
        android:textSize="15dp" />

    <Button
        android:id="@+id/dietPlanButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightGainDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="131dp"
        android:backgroundTint="@color/black"
        android:layout_marginEnd="78dp"
        android:text="Diet Plan" />

    <Button
        android:id="@+id/exercisesButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dietPlanButton"
        android:layout_alignStart="@+id/dietPlanButton"
        android:layout_alignEnd="@+id/dietPlanButton"
        android:layout_marginStart="0dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="1dp"
        android:text="Exercises" />

</RelativeLayout>