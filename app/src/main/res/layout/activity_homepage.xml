<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/homepage">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="169dp"
        android:layout_height="71dp"
        android:layout_alignStart="@+id/spinnerGoals"
        android:layout_alignEnd="@+id/spinnerGoals"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="About You"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/roundbox"
        android:hint="Age"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Spinner
        android:id="@+id/spinnerGoals"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_below="@id/editTextAge"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:paddingLeft="10dp"
        android:background="@drawable/roundbox"
        android:entries="@array/goals"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/editTextHeight"
        android:layout_width="37dp"
        android:layout_height="50dp"
        android:layout_below="@id/spinnerGoals"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/roundbox"
        android:hint="Height (cm)"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        android:textColorHint="@color/black" />


    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_below="@id/editTextHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/roundbox"
        android:hint="Weight (kg)"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/btnSaveDetails"
        android:layout_width="202dp"
        android:layout_height="65dp"
        android:layout_below="@id/editTextWeight"
        android:layout_alignEnd="@+id/editTextWeight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="86dp"
        android:text="Save Details" />

</RelativeLayout>
